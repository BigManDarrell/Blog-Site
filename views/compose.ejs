<%- include('partials/header'); -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Title</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="postTitle">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Post</label>
                <textarea class="form-control mb-3" id="exampleFormControlTextarea1" rows="5" name="postBody"></textarea>
            </div>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>

<%- include('partials/footer'); -%>